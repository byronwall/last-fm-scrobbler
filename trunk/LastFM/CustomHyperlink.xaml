<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="LastFM.CustomHyperlink"
	x:Name="UserControl"
	Width="Auto" Height="Auto" Cursor="Hand" ForceCursor="False" MinHeight="0" MinWidth="0">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="CustomProgressBar.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<Grid x:Name="LayoutRoot">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto" Height="Auto" Text="{Binding Path=Text, ElementName=UserControl, Mode=Default}" TextWrapping="Wrap" MouseUp="TextBlock_MouseUp" Cursor="Hand" ToolTip="{Binding Path=Address, ElementName=UserControl, Mode=Default}"/>
	</Grid>
</UserControl>